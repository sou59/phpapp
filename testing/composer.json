{
    "name": "aston/cart",
    "version": "1.0.0",
    "description": "Shopping Cart",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Souad Zorro",
            "email": "sou@example.com"
        }
    ],
    "scripts": {
        "server": "php -S localhost:3000 -docroot &",
        "clean": [
            "phpcbf --standard=PSR2 ./src"
        ],
        "test": [
            "phpcs --standard=PSR2 ./src",
            "phpunit --colors=always --configuration phpunit.xml"
        ]
    },
    "autoload": {
        "psr-4": {
            "Aston\\": "src/Aston"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Aston\\": "test/Aston"
        }
    },
    "minimum-stability": "stable",
    "require": {},
    "require-dev": {
        "phpunit/phpunit": "^7",
        "phpunit/php-code-coverage": "^6.1@dev",
        "squizlabs/php_codesniffer": "^3.0@dev"
    }
}

